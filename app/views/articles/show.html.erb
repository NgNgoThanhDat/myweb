<h1>Show article</h1>

<h3>Title</h3>
<p><%= @article.title %></p>

<h3>Content</h3>
<p><%= @article.text %></p>

<h4>Comment</h4>

<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h4>Add a comment</h4>
<%= form_for ([@article, @article.comments.build]) do |f| %>
<div class="row">
  <div class="small-5">
    <%= f.label :commenter %>
    <%= f.text_field :commenter %>
  </div>

  <div class="small-5">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="small-5">
    <%= f.submit %>
  </div>
</div>

<% end %>

<%= link_to 'Back', articles_path(@article) %> |
<%= link_to 'Edit', edit_article_path(@article) %>
