<%= form_for ([@article, @article.comments.build]) do |f| %>
<div class="row">
  <div class="small-5">
    <%= f.label :commenter %>
    <%= f.text_field :commenter %>
  </div>

  <div class="small-5">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="small-5">
    <%= f.submit %>
  </div>
</div>

<% end %>
